<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CollaboratorItem"
    style="@style/MenuItem"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/NameItemText"
        app:layout_constraintBottom_toTopOf="@+id/CarnetItemText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/MenuItemText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Nombre del evento"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/CarnetItemText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameItemText"
        style="@style/MenuItemText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lugar"
        android:textStyle="normal"/>
    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Eliminar"
        android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>