<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="fontFamily">@font/robotoslab_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="menuTitle">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="fontFamily">@font/robotoslab_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="SectionTitle">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="fontFamily">@font/robotoslab_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="MenuCategoryText">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="fontFamily">@font/robotoslab_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="MenuCategory">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/rounded_card</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>
    <style name="MenuItemImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="MenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintWidth">0dp</item>
    </style>
    <style name="FilterLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="inverseButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>